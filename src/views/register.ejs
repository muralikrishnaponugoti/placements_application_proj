<h1 class="mt-5 mb-4 content-title">Register</h1>
<%if(locals.errorMessage){ %>
    <div class="alert alert-danger" role="alert">
        <%= errorMessage %>
    </div>
<% } %>
<form action="/register" method="post" class="form-width">
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="enter name" value="" required>
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="enter email"  value="" required>
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="enter password at least 6"  value="" required>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
    <hr>
    <div> 
        <sapn>allready rigsted</sapn>
        <a href="/">Login</a>
    </div>
</form>